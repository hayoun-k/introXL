---
import Image from "astro/components/Image.astro"

const {imgSrc, imgTitle, imgTxt } = Astro.props;
const { class: className, ...rest} = Astro.props;
---

<li class=`card-item ${className}` {...rest}>
  <Image src={imgSrc} alt={imgTitle}></Image>
  <div class="text-container">
    <h3>{imgTitle}</h3>
    <p>{imgTxt}</p>
    <slot />
  </div>
</li>

<style>
  .card-item {
	display: flex;
	gap: 60px;
  }

  /* .card-item:nth-of-type(2n) img {
	order: 2;
  } */

  .card-item .text-container {
	margin-block: auto;
  }

  .card-item h3 {
	margin-bottom: 26px;
	/* text-align: center; */
	font-size: 40px;
	line-height: 46px;
	letter-spacing: -2px;
  }

  @media screen and (width < 1024px) {
    .card-item {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .card-item img {
      max-width: 270px;
    }

    .text-container {
      text-align: center;
    }

    .card-item h3 {
      font-size: 32px;
    }

    .card-item p {
      font-size: 16px;
    }
  }
</style>